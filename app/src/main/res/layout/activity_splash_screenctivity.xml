<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first_line"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:background="@drawable/white_line"
            android:layout_centerHorizontal="true">

        </View>
        <View
            android:id="@+id/secound_line"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/red_line"
            android:layout_toRightOf="@+id/first_line"

            >

        </View>
        <View
            android:id="@+id/third_line"
            android:layout_width="20dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/white_line"
            android:layout_toRightOf="@+id/secound_line"

            >

        </View>
        <View
            android:id="@+id/fourth_line"
            android:layout_width="20dp"
            android:layout_height="250dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/purple_line"
            android:layout_toRightOf="@+id/third_line"

            >

        </View>
        <View
            android:id="@+id/five_line"
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/green_line"
            android:layout_toRightOf="@+id/fourth_line"

            >

        </View>
        <View
            android:id="@+id/six_line"
            android:layout_width="20dp"
            android:layout_height="220dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/white_line"
            android:layout_toRightOf="@+id/five_line"

            >

        </View>
        <View
            android:id="@+id/seven_line"
            android:layout_width="20dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/red_line"
            android:layout_toRightOf="@+id/six_line"

            >

        </View>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/baloo"
            android:text="MID 2.0"
            android:textColor="@color/text_color"
            android:textSize="100dp">

        </TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <ProgressBar
            android:id="@+id/progressBar_cyclic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:minWidth="70dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            >
            <TextView
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo"
                android:text="CodingBurg"
                android:textColor="@color/text_color"
                android:textSize="30dp">

            </TextView>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>




